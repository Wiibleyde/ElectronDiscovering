{
  "name": "electron-todo",
  "version": "0.1.0",
  "description": "A simple educational todo app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "buildLinux": "electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --out=distLinux",
    "buildWindows": "electron-packager . electron-todo --overwrite --platform=win32 --arch=ia32 --prune=true --out=distWindows",
    "buildMac": "electron-packager . electron-todo --overwrite --platform=darwin --arch=x64 --prune=true --out=distMac",
    "build": "npm run buildLinux && npm run buildWindows && npm run buildMac"
  },
  "repository": "https://github.com/CodeDraken/electron-todo",
  "keywords": [
    "Electron",
    "tutorial",
    "demo"
  ],
  "author": "CodeDraken",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "^18.0.0",
    "devtron": "^1.4.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "electron": "^3.0.4",
    "electron-reload": "^1.2.5",
    "electron-store": "^2.0.0",
    "spectre.css": "^0.5.3"
  }
}
